<h5>Categorias</h5>

<table>
  <thead>
  </thead>

  <tbody>
    <% @categories.each_slice(3) do |three_category| %>
    <div class="card-deck">
      <% three_category.each do |category| %>
      <div class="card">
        <div class="card-body">
        <p><%= image_tag category.image.variant(resize: "100x100") if category.image.attached? %></p>
        <h5><%= category.name %></h5>

        <h6><%= link_to 'Show', category, class:'btn btn-secondary btn-sm' %></h6>
      </div>
      </div>
      <% end %>
      </div>
    <% end %>
  </tbody>
